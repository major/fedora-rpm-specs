Name:           python-fisx
Version:        1.3.2
Release:        %autorelease
Summary:        Calculate X-ray fluorescence intensities

# This is SPDX
License:        MIT
URL:            https://github.com/vasole/fisx
Source:         %{url}/archive/v%{version}/fisx-%{version}.tar.gz

BuildRequires:  gcc
BuildRequires:  gcc-c++

%global _description %{expand:
Calculate expected x-ray fluorescence intensities. The library accounts
for secondary and tertiary excitation, K, L and M shell emission lines
and de-excitation cascade effects.}

%description %_description

%package     -n python3-fisx
Summary: %summary

%description -n python3-fisx %_description

%prep
%autosetup -n fisx-%{version}
# Remove Cythonized C++ sources:
# https://docs.fedoraproject.org/en-US/packaging-guidelines/Python/#_using_cython
grep -FrinIl 'Generated by Cython' python/ | xargs -r -t rm -v

%generate_buildrequires
%pyproject_buildrequires

%build
%pyproject_wheel

%install
%pyproject_install
%pyproject_save_files -l fisx

%check
%pyproject_check_import
%{py3_test_envvars} %{python3} -m fisx.tests.testAll

%files -n python3-fisx -f %{pyproject_files}
%doc README.rst

%changelog
%autochangelog
